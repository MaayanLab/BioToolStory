{
  "match": {
    "${$validator}": "/@dcic/signature-commons-schema/core/signature.json",
    "${library.dataset}": "creeds"
  },
  "properties": {
    "Image": {
      "visibility": 1,
      "type": "img",
      "src": "static/images/creeds.png",
      "alt": "CREEDS"
    },
    "Assay": {
      "visibility": 1,
      "type": "text",
      "text": "Microarray"
    },
    "Drug": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.drug_name}"
    },
    "DrugBank": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.drugbank_id}"
    },
    "Organism": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.organism}"
    },
    "GEO Accession": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.geo_id}"
    },
    "P-Value": {
      "visibility": 1,
      "condition": {
        "${meta['p-value']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "asc"
      },
      "type": "text",
      "text": "${meta['p-value']}"
    },
    "Odds Ratio": {
      "visibility": 1,
      "condition": {
        "${meta.oddsratio}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.oddsratio}"
    },
    "Set Size": {
      "visibility": 1,
      "condition": {
        "${meta.setsize}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.setsize}"
    }
  }
}