{
  "$id": "https://raw.githubusercontent.com/MaayanLab/btools-ui/toolstory/validators/btools_tools.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "/dcic/signature-commons-schema/v5/core/meta.json"
    },
    {
      "properties": {
            "PMID": {
                "description": "pubmed ids of papers describing the same tool",
                "type": "array",
                "item": {
                  "description": "a single pubmed id of the paper describing the tool",
                  "type":"string"
                }
        },
            "tool_homepage_url": {
                        "description": "link to the article",
                        "type": "string",
                        "format":"uri"
                    },
            "Tool_Name": {
                        "description": "the name of the tool",
                        "type": "string"
                    },
            "Tool_Description": {
                        "description": "the name of the tool",
                        "type": "string"
                    },
                    "Article_Title": {
                        "description": "title of the article",
                        "type": "string"
                        },
            "Citations": {
                "description": "number of citations on pubmed",
                "type": "integer"
                        },
            "Article_Language": {
                "description": "language of the article",
                "type": "array",
                "item": {
                  "description": "language of the article",
                  "type":"string"
                }
                        },
            "Last_Updated": {
                "description": "last update date of the article in epoc time",
                "type": "string"
                    },
            "Added_On": {
                "description": "time in epoc an article was submitted to pubmed",
                "type": "string"
                    },
            "Published_On": {
                "description": "publication date of the article (epoc)",
                "type": "string"
                    },
            "Journal": {
                "description": "name of the journal the article was published on",
                "type": "string"
                    },
            "ISSN": {
                "description": "electronic ISSN - matches to ISSN on the journals schema",
                "type": "string"
                    },
            "Journal_Title": {
                "description": "journal name - same as journals schema",
                "type": "string"
                    },
            "Altmetric_Score": {
                "description": "score of the article on altmetric",
                "type": "number"
                    },
            "Readers_Count": {
                "description": "number of readers as reported on altmetric",
                "type": "number"
                    },
            "Readers_in_Mendele": {
                "description": "number of readers on Mendele as reported on altmetric",
                "type": "number"
                    },
            "Readers_in_Connote": {
                "description": "number of readers on Connote as reported on altmetric",
                "type": "number"
                    },
            "Readers_in_Citeuli": {
                "description": "number of readers on Citeuli as reported on altmetric",
                "type": "number"
                    },
            "Cited_By_Posts_Cou": {
                "description": "number of posts citations as reported on altmetric",
                "type": "number"
                    },
            "Twitter_accounts_that_tweeted_this_publication": {
                "description": "based on altmetric data",
                "type": "number"
                    },
            "Users_who_mentioned_the_publication_on_Twitter": {
                "description": "based on altmetric data",
                "type": "number"
                    },
            "Scientists_who_mentioned_the_publication_on_Twitter":{
                "description": "based on altmetric data",
                "type": "number"
                    },
            "News_sources_that_mentioned_the_publication":{
                "description": "based on altmetric data",
                "type": "number"
                    },
            "Mentions_in_social_media":{
                "description": "based on altmetric data",
                "type": "number"
                    },
            "Author_Information": {
              "description": "names of authors",
              "items": {
                "properties": {
                  "AffiliationInfo": {
                    "description": "institusion",
                    "type": "string"
                  },
                  "LastName": {
                    "description": "author last name",
                    "type": "string"
                  },
                  "ForeName": {
                    "description": "author Fore name",
                    "type": "string"
                  },
                  "Initials": {
                    "description": "author Initials",
                    "type": "string"
                  }
                },
                "type": "object"
              },
              "type": "array"
            },
            "Article_Date": {
                        "description": "publish date",
                        "type": "string"
                    },
            "Abstract": {
                        "description": "article abstract",
                        "type": "string"
                    },
            "Electronic_Location_Identifier": {
                        "description": "doi of the article",
                        "type": "string"
                    },
            "Publication_Type": {
                          "description": "Publication_Type",
                          "type": "array",
                          "item": {
                            "description": "Publication_Type",
                            "type":"string"
                          }
                        },
            "Grant_List": {
                        "description": "list of grant ids",
                        "type": "array"
                    },
            "Chemical_List": {
                        "description": "list of chemicals",
                        "items": {
                          "properties": {
                            "RegistryNumber": {
                              "description": "chemical id",
                              "type": "string"
                            },
                            "NameOfSubstance": {
                              "description": "Official name of the chemical",
                              "type": "string"
                            }
                          },
                          "type": "object"
                        },
                        "type": "array"
                      },
            "KeywordList": {
                "description": "list of article keywords",
                        "items":[
                            {
                            "description": "a single keyword",
                            "type": "string"
                            }
                            ],
                        "type": "array"
            }
        },
      "required": [
            "$validator",
            "ISSN",
            "PMID",
            "Abstract"
        ],
      "type": "object"
    }
  ]
}
