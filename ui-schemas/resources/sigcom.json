{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/resources.json",
    "${dataset}": "sigcom"
  },
  "properties": {
    "Resource Name": {
      "visibility": 1,
      "type": "text",
      "text": "${meta['Resource_Name']}"
    },
    "Description": {
      "visibility": 1,
      "type": "text",
      "text": "${meta['Description']}"
    },
    "PMID": {
      "visibility": 1,
      "type": "text",
      "text": "${meta['PMID']}"
    },
    "URL": {
      "visibility": 1,
      "type": "text",
      "text": "${meta['URL']}"
    },
    "Signature Count": {
      "visibility": 1,
      "type": "text",
      "text": "${meta['Signature_Count']}"
    }
  }
}