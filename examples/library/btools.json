{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/library.json"
  },
  "properties": {
    "Image": {
      "visibility": 1,
      "type": "img",
      "src": "${meta.icon}",
      "alt": "${meta.tool_name}",
      "text": "${meta.tool_name}",
      "priority": 1,
      "icon": true,
      "name": true
    },
    "Journal": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.journal_name}",
      "subtitle": true,
      "priority": 2
    },
    "Last Author": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.last_author.name}",
      "MDI_Icon": "mdi-desktop-tower-monitor",
      "priority": 4
    },
    "Institution": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.institution}",
      "MDI_Icon": "mdi-certificate",
      "priority": 5
    },
    "Pubmed Citations": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.total_pubmed_citations}",
      "Field_Name": "meta.total_pubmed_citations",
      "MDI_Icon": "mdi-book-open-page-variant",
      "priority": 10,
      "score": true
    },
    "Twitter Citations": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.cited_by_tweeters_count}",
      "Field_Name": "meta.cited_by_tweeters_count",
      "MDI_Icon": "mdi-twitter",
      "priority": 10,
      "score": true
    },
    "Attention Score": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.attention_score}",
      "Field_Name": "meta.attention_score",
      "MDI_Icon": "mdi-forum-outline",
      "priority": 10,
      "score": true
    },
    "Institution": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.institution}",
      "MDI_Icon": "mdi-certificate",
      "priority": 5
    },
    "Institution": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.institution}",
      "MDI_Icon": "mdi-certificate",
      "priority": 5
    },
    "Publication year": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.pub_year}",
      "MDI_Icon": "mdi-calendar",
      "priority": 6
    },
    "Status": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.up_down}",
      "MDI_Icon": "mdi-web",
      "priority": 7
    }
  }
} 