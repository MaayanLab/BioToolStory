{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/signature.json",
    "${library.dataset}": "lincs_clue"
  },
  "properties": {
    "Image": {
      "visibility": 1,
      "type": "img",
      "src": "${PREFIX}/static/images/clueio.ico",
      "alt": "ConnectivityMap",
      "priority": 1,
      "icon": true
    },
    "Library": {
      "visibility": 1,
      "type": "text",
      "text": "ConnectivityMap",
      "priority": 1,
      "subtitle": true
    },
    "Signature ID": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.sig_id}",
      "name": true,
      "priority": 2
    },
    "Assay": {
      "visibility": 1,
      "type": "text",
      "text": "L1000",
      "priority": 1,
      "MDI_Icon": "mdi-flask-outline"
    },
    "Cell-line": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.Cell_Line[0].Name}",
      "priority": 3,
      "MDI_Icon": "mdi-test-tube"
    },
    "Time point": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.pert_time} ${meta.pert_time_unit}",
      "priority": 4,
      "MDI_Icon": "mdi-timer"
    },
    "Perturbation": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.pert_desc === '-666' ? meta.pert_id : meta.pert_desc}",
      "priority": 4,
      "MDI_Icon": "mdi-microscope"
    },
    "Concentration": {
      "visibility": 1,
      "condition": {
        "${meta.pert_dose}": {
          "ne": "-666"
        }
      },
      "type": "text",
      "text": "${meta.pert_dose} ${meta.pert_dose_unit}",
      "priority": 4,
      "MDI_Icon": "mdi-eyedropper"
    },
    "P-Value": {
      "visibility": 1,
      "condition": {
        "${meta['p-value']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "asc"
      },
      "type": "text",
      "text": "${meta['p-value']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Odds Ratio": {
      "visibility": 1,
      "condition": {
        "${meta.oddsratio}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.oddsratio}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Set Size": {
      "visibility": 1,
      "condition": {
        "${meta.setsize}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.setsize}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "P-Up": {
      "visibility": 1,
      "condition": {
        "${meta['p-up']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['p-up']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "P-Down": {
      "visibility": 1,
      "condition": {
        "${meta['p-down']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['p-down']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Z-Up": {
      "visibility": 1,
      "condition": {
        "${meta['z-up']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['z-up']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Z-Down": {
      "visibility": 1,
      "condition": {
        "${meta['z-down']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['z-down']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Log(p) Fisher": {
      "visibility": 1,
      "condition": {
        "${meta['logp-fisher']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "desc"
      },
      "type": "text",
      "text": "${meta['logp-fisher']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Log(p) Average":{
      "visibility": 1,
      "condition": {
        "${meta['logp-avg']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['logp-avg']}",
      "sortable": true,
      "score": true,
      "priority": 5
    },
    "Direction": {
      "visibility": 1,
      "condition": {
        "${meta['logp-fisher']}": {
          "ne": null
        }
      },
      "type": "text",
      "text": "${meta['direction'] === 1 ? 'up' : 'down'}",
      "priority": 4,
      "MDI_Icon": "mdi-arrow-up-down-bold-outline"
    }
  }
}