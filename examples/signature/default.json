{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/signature.json"
  },
  "properties": {
    "Image": {
      "visibility": 1,
      "type": "img",
      "alt": "${id}",
      "src": "${PREFIX}/static/images/default-black.png",
      "priority": 1,
      "icon": true
    },
    "Description": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.Description || meta.description}",
      "priority": 2,
      "name": true
    },
    "P-Value": {
      "visibility": 1,
      "condition": {
        "${meta['p-value']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "asc"
      },
      "type": "text",
      "text": "${meta['p-value']}",
      "priority": 3
    },
    "Odds Ratio": {
      "visibility": 1,
      "condition": {
        "${meta.oddsratio}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.oddsratio}",
      "priority": 3
    },
    "Set Size": {
      "visibility": 1,
      "condition": {
        "${meta.setsize}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.setsize}",
      "priority": 3
    }
  }
}