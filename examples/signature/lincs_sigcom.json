
{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/signature.json"
  },
  "properties": {
    "Image": {
      "visibility": 1,
      "type": "img",
      "src": "${PREFIX}/static/images/lincs/LINCS.ico",
      "alt": "${meta.platform || meta.signatureid}",
      "priority": 1
    },
    "Signature ID": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.signatureid}",
      "priority": 4
    },
    "Cell-line": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.cellline}",
      "priority": 3
    },
    "Tissue": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.tissue}",
      "priority": 3
    },
    "Compound": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.compound}",
      "priority": 4
    },
    "Concentration": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.concentration}",
      "priority": 4
    },
    "Organism": {
      "visibility": 1,
      "type": "text",
      "text": "${meta.organism}",
      "priority": 4
    },
    "P-Value": {
      "visibility": 1,
      "condition": {
        "${meta['p-value']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "asc"
      },
      "type": "text",
      "text": "${meta['p-value']}",
      "priority": 5
    },
    "Odds Ratio": {
      "visibility": 1,
      "condition": {
        "${meta.oddsratio}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.oddsratio}",
      "priority": 5
    },
    "Set Size": {
      "visibility": 1,
      "condition": {
        "${meta.setsize}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta.setsize}",
      "priority": 5
    },
    "P-Up": {
      "visibility": 1,
      "condition": {
        "${meta['p-up']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['p-up']}",
      "priority": 5
    },
    "P-Down": {
      "visibility": 1,
      "condition": {
        "${meta['p-down']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['p-down']}",
      "priority": 5
    },
    "Z-Up": {
      "visibility": 1,
      "condition": {
        "${meta['z-up']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['z-up']}",
      "priority": 5
    },
    "Z-Down": {
      "visibility": 1,
      "condition": {
        "${meta['z-down']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['z-down']}",
      "priority": 5
    },
    "Log(p) Fisher": {
      "visibility": 1,
      "condition": {
        "${meta['logp-fisher']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "columnOptions": {
        "sort": true,
        "sortDirection": "desc"
      },
      "type": "text",
      "text": "${meta['logp-fisher']}",
      "priority": 5
    },
    "Log(p) Average":{
      "visibility": 1,
      "condition": {
        "${meta['logp-avg']}": {
          "ne": null
        }
      },
      "columnType": "number",
      "type": "text",
      "text": "${meta['logp-avg']}",
      "priority": 5
    },
    "Direction": {
      "visibility": 1,
      "condition": {
        "${meta['logp-fisher']}": {
          "ne": null
        }
      },
      "type": "text",
      "text": "${meta['direction'] === 1 ? 'up' : 'down'}",
      "priority": 4
    }
  }
}